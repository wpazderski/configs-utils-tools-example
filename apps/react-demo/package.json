{
    "name": "@wpazderski/react-demo",
    "private": true,
    "version": "1.0.0",
    "author": "Witold Pazderski",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "lint-check": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0",
        "lint-fix": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0 --fix",
        "tsc-check": "tsc -b --noEmit",
        "check-all": "run-s lint-check tsc-check",
        "pre-commit-checks": "run-s check-all",
        "dev": "vite --port 3102",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "start-test-server": "vite --host --port 3102",
        "test-chromium": "playwright test --project=chromium",
        "test-firefox": "playwright test --project=firefox",
        "test-webkit": "playwright test --project=webkit",
        "test": "playwright test --project=chromium",
        "test-all": "playwright test"
    },
    "dependencies": {
        "@wpazderski/js-utils": "^1.0.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@types/node": "^24.2.1",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^5.0.0",
        "@wpazderski/eslint-config": "^1.0.5",
        "@wpazderski/playwright-config": "^1.0.4",
        "@wpazderski/playwright-utils": "^1.0.2",
        "@wpazderski/typescript-config": "^1.0.4",
        "eslint": "^9.33.0",
        "typescript": "~5.9.2",
        "vite": "^7.1.2"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=10.0.0",
        "npm": "please-use-pnpm",
        "yarn": "please-use-pnpm"
    }
}
